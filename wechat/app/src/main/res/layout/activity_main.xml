<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.wechat.app.activity.MainActivity"
    style="@style/mainActivityLinearLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qq_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="380424751"
                android:drawableTop="@drawable/qq_icon"
                android:drawablePadding="10dp"
                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint_label"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="10dp"
            android:id="@+id/password"
            android:singleLine="true"
            android:textColor="#C0C0C0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:id="@+id/log_in_button"
                android:background="@drawable/custom_button"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forget_password"
                android:text="@string/forgot_password_label"
                android:layout_alignParentRight="true"
                android:textColor="@color/password_text_view_hint" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_up"
                android:layout_centerInParent="true"
                android:text="@string/sign_up_label"
                android:shadowColor="@color/login_button_black_text"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
